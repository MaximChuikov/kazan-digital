{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@Pages/*": [
        "./pages/*"
      ],
      "@Modals/*": [
        "./modals/*"
      ],
      "@Helpers/*": [
        "./helpers/*"
      ],
      "@Components/*": [
        "./components/*"
      ],
      "@Models/*": [
        "./models/*"
      ],
      "@Assets/*": [
        "./assets/*"
      ],
      "@Styles/*": [
        "./styles/*"
      ]
    }
  },
  "exclude": [
    "build",
    "node_modules"
  ],
  "include": [
    "src",
    "declaration.d.ts"
  ]
}
